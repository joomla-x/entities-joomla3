<?xml version="1.0" encoding="utf-8"?>
<entity xmlns="https://joomla.org/joomla-x/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://joomla.org/joomla-x/orm
            https://raw.githubusercontent.com/joomla-x/orm/master/src/Definition/entity.xsd"
        name="Joomla3\Entity\Module">

    <storage>
        <default table="modules"/>
    </storage>

    <fields>

        <field
            name="id"
            type="int"
            required="true"
            input="number"
            label="JGLOBAL_FIELD_ID_LABEL"
            description="JGLOBAL_FIELD_ID_DESC"
            default="0"
            readonly="true"
        >
            <validation rule="integer"/>
        </field>

        <!-- FK to the #__assets table. -->
        <field
            name="asset_id"
            type="int"
            required="true"
            default="0"
            input="hidden"
            filter="unset"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="title"
            type="varchar"
            required="true"
            default=""
            input="text"
            label="JGLOBAL_TITLE"
            description="COM_MODULES_FIELD_TITLE_DESC"
            size="40"
        >
            <validation rule="maxlen" value="40"/>
        </field>

        <field
            name="note"
            type="varchar"
            required="true"
            default=""
            input="text"
            label="COM_MODULES_FIELD_NOTE_LABEL"
            description="COM_MODULES_FIELD_NOTE_DESC"
            size="40"
        >
            <validation rule="maxlen" value="40"/>
        </field>

        <field
            name="content"
            type="text"
            required="true"
            default=""
            input="editor"
            label="COM_MODULES_FIELD_CONTENT_LABEL"
            description="COM_MODULES_FIELD_CONTENT_DESC"
            filter="JComponentHelper::filterText"
        >
        </field>

        <field
            name="ordering"
            type="int"
            required="true"
            default="0"
            input="moduleorder"
            label="JFIELD_ORDERING_LABEL"
            description="JFIELD_ORDERING_DESC"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="position"
            type="varchar"
            required="true"
            default=""
            input="moduleposition"
            label="COM_MODULES_FIELD_POSITION_LABEL"
            description="COM_MODULES_FIELD_POSITION_DESC"
        >
        </field>

        <field
            name="checked_out"
            type="int"
            required="true"
            default="0"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="checked_out_time"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
        >
        </field>

        <field
            name="publish_up"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="calendar"
            label="COM_MODULES_FIELD_PUBLISH_UP_LABEL"
            description="COM_MODULES_FIELD_PUBLISH_UP_DESC"
            filter="user_utc"
            size="22"
        >
            <validation rule="maxlen" value="22"/>
        </field>

        <field
            name="publish_down"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="calendar"
            label="COM_MODULES_FIELD_PUBLISH_DOWN_LABEL"
            description="COM_MODULES_FIELD_PUBLISH_DOWN_DESC"
            filter="user_utc"
            size="22"
        >
            <validation rule="maxlen" value="22"/>
        </field>

        <field
            name="published"
            type="boolean"
            required="true"
            default="0"
            input="list"
            label="JSTATUS"
            description="COM_MODULES_FIELD_PUBLISHED_DESC"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field
            name="module"
            type="varchar"
            default="NULL"
            input="hidden"
            label="COM_MODULES_FIELD_MODULE_LABEL"
            description="COM_MODULES_FIELD_MODULE_DESC"
            readonly="true"
            size="20"
        >
            <validation rule="maxlen" value="20"/>
        </field>

        <field
            name="access"
            type="int"
            required="true"
            default="0"
            input="accesslevel"
            label="JFIELD_ACCESS_LABEL"
            description="JFIELD_ACCESS_DESC"
            size="1"
        >
            <validation rule="integer"/>
            <validation rule="minvalue" value="-9"/>
            <validation rule="maxvalue" value="9"/>
        </field>

        <field
            name="showtitle"
            type="boolean"
            required="true"
            default="1"
            input="radio"
            label="COM_MODULES_FIELD_SHOWTITLE_LABEL"
            description="COM_MODULES_FIELD_SHOWTITLE_DESC"
        >
            <option value="1">JSHOW</option>
            <option value="0">JHIDE</option>
        </field>

        <field
            name="params"
            type="text"
            required="true"
        >
        </field>

        <field
            name="client_id"
            type="boolean"
            required="true"
            default="0"
            input="hidden"
            label="COM_MODULES_FIELD_CLIENT_ID_LABEL"
            description="COM_MODULES_FIELD_CLIENT_ID_DESC"
            readonly="true"
        >
        </field>

        <field
            name="language"
            type="char"
            required="true"
            input="contentlanguage"
            label="JFIELD_LANGUAGE_LABEL"
            description="JFIELD_MODULE_LANGUAGE_DESC"
        >
            <option value="*">JALL</option>
        </field>

    </fields>

    <relations>
    </relations>

</entity>
