<?xml version="1.0" encoding="utf-8"?>
<entity xmlns="https://joomla.org/joomla-x/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://joomla.org/joomla-x/orm
            https://raw.githubusercontent.com/joomla-x/orm/master/src/Definition/entity.xsd"
        name="Joomla3\Entity\UserNote">

    <storage>
        <default table="user_notes" primary="id"/>
    </storage>

    <fields>

        <field
            name="id"
            type="int"
            required="true"
            input="hidden"
            label="COM_USERS_FIELD_ID_LABEL"
            size="6"
            default="0"
            readonly="true"
        >
            <validation rule="integer"/>
            <validation rule="minvalue" value="-999999"/>
            <validation rule="maxvalue" value="999999"/>
        </field>

        <field
            name="user_id"
            type="int"
            required="true"
            default="0"
            input="user"
            label="COM_USERS_FIELD_USER_ID_LABEL"
            description="JLIB_FORM_SELECT_USER"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="catid"
            type="int"
            required="true"
            default="0"
            input="modal_category"
            label="COM_USERS_FIELD_CATEGORY_ID_LABEL"
            description="JFIELD_CATEGORY_DESC"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="subject"
            type="varchar"
            required="true"
            default=""
            input="text"
            label="COM_USERS_FIELD_SUBJECT_LABEL"
            description="COM_USERS_FIELD_SUBJECT_DESC"
            size="80"
        >
            <validation rule="maxlen" value="80"/>
        </field>

        <field
            name="body"
            type="text"
            required="true"
            input="editor"
            label="COM_USERS_FIELD_NOTEBODY_LABEL"
            description="COM_USERS_FIELD_NOTEBODY_DESC"
            filter="safehtml"
        >
        </field>

        <field
            name="state"
            type="boolean"
            required="true"
            default="0"
            input="list"
            label="JSTATUS"
            description="COM_USERS_FIELD_STATE_DESC"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field
            name="checked_out"
            type="int"
            required="true"
            default="0"
            input="hidden"
            filter="unset"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="checked_out_time"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="hidden"
            filter="unset"
        >
        </field>

        <field
            name="created_user_id"
            type="int"
            required="true"
            default="0"
            input="hidden"
            label="JGLOBAL_FIELD_CREATED_BY_LABEL"
            filter="unset"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="created_time"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="hidden"
            label="JGLOBAL_FIELD_CREATED_LABEL"
            filter="unset"
        >
        </field>

        <field
            name="modified_user_id"
            type="int"
            required="true"
            input="hidden"
            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
            filter="unset"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="modified_time"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="hidden"
            label="JGLOBAL_FIELD_MODIFIED_LABEL"
            filter="unset"
        >
        </field>

        <field
            name="review_time"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="calendar"
            label="COM_USERS_FIELD_REVIEW_TIME_LABEL"
            description="COM_USERS_FIELD_REVIEW_TIME_DESC"
        >
        </field>

        <field
            name="publish_up"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="calendar"
            label="JGLOBAL_FIELD_PUBLISH_UP_LABEL"
            description="JGLOBAL_FIELD_PUBLISH_UP_DESC"
            size="22"
            filter="user_utc"
        >
            <validation rule="maxlen" value="22"/>
        </field>

        <field
            name="publish_down"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="calendar"
            label="JGLOBAL_FIELD_PUBLISH_DOWN_LABEL"
            description="JGLOBAL_FIELD_PUBLISH_DOWN_DESC"
            size="22"
            filter="user_utc"
        >
            <validation rule="maxlen" value="22"/>
        </field>

    </fields>

    <relations>
        <belongsTo
            name="user"
            entity="Joomla3\Entity\User"
            reference="user_id"
        />

        <belongsTo
            name="category"
            entity="Joomla3\Entity\Category"
            reference="catid"
        />

        <belongsTo
            name="author"
            entity="Joomla3\Entity\User"
            reference="created_user_id"
        />

        <!-- belongsTo
            name="modified_user"
            entity="Joomla3\Entity\User"
            reference="modified_user_id"
        / -->

        <!-- belongsTo
            name="checked_out_user"
            entity="Joomla3\Entity\User"
            reference="checked_out"
        / -->
    </relations>

</entity>
