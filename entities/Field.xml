<?xml version="1.0" encoding="utf-8"?>
<entity xmlns="https://joomla.org/joomla-x/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://joomla.org/joomla-x/orm
            https://raw.githubusercontent.com/joomla-x/orm/master/src/Definition/entity.xsd"
        name="Joomla3\Entity\Field">

    <storage>
        <default table="fields"/>
    </storage>

    <fields>

        <field
            name="id"
            type="int"
            required="true"
            input="number"
            label="JGLOBAL_FIELD_ID_LABEL"
            description="JGLOBAL_FIELD_ID_DESC"
            default="0"
            readonly="true"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="asset_id"
            type="int"
            required="true"
            default="0"
            input="hidden"
            filter="unset"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="context"
            type="varchar"
            required="true"
            default=""
            input="hidden"
        >
        </field>

        <field
            name="group_id"
            type="int"
            required="true"
            default="0"
            input="fieldgroups"
            label="COM_FIELDS_FIELD_GROUP_LABEL"
            description="COM_FIELDS_FIELD_GROUP_DESC"
        >
            <option value="0">JNONE</option>
            <validation rule="integer"/>
        </field>

        <field
            name="title"
            type="varchar"
            required="true"
            default=""
            input="text"
            label="JGLOBAL_TITLE"
            description="JFIELD_TITLE_DESC"
            size="40"
        >
            <validation rule="maxlen" value="40"/>
        </field>

        <field
            name="name"
            type="varchar"
            required="true"
            default=""
            input="text"
            label="JFIELD_NAME_LABEL"
            description="JFIELD_NAME_DESC"
            hint="JFIELD_NAME_PLACEHOLDER"
            size="45"
        >
            <validation rule="maxlen" value="45"/>
        </field>

        <field
            name="label"
            type="varchar"
            required="true"
            default=""
            input="text"
            label="COM_FIELDS_FIELD_LABEL_LABEL"
            description="COM_FIELDS_FIELD_LABEL_DESC"
            size="40"
            hint="JFIELD_ALIAS_PLACEHOLDER"
        >
            <validation rule="maxlen" value="40"/>
        </field>

        <field
            name="default_value"
            type="text"
            required="true"
            default=""
            input="textarea"
            label="COM_FIELDS_FIELD_DEFAULT_VALUE_LABEL"
            description="COM_FIELDS_FIELD_DEFAULT_VALUE_DESC"
            filter="raw"
        >
        </field>

        <field
            name="type"
            type="varchar"
            required="true"
            default="text"
            input="type"
            label="COM_FIELDS_FIELD_TYPE_LABEL"
            description="COM_FIELDS_FIELD_TYPE_DESC"
        >
        </field>

        <field
            name="note"
            type="varchar"
            required="true"
            default=""
            input="text"
            label="COM_FIELDS_FIELD_NOTE_LABEL"
            description="COM_FIELDS_FIELD_NOTE_DESC"
            size="40"
        >
            <validation rule="maxlen" value="40"/>
        </field>

        <field
            name="description"
            type="text"
            required="true"
            input="textarea"
            label="JGLOBAL_DESCRIPTION"
            description="COM_FIELDS_FIELD_DESCRIPTION_DESC"
            size="40"
            filter="HTML"
        >
            <validation rule="maxlen" value="40"/>
        </field>

        <field
            name="state"
            type="boolean"
            required="true"
            default="1"
            input="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field
            name="required"
            type="boolean"
            required="true"
            default="0"
            input="radio"
            label="COM_FIELDS_FIELD_REQUIRED_LABEL"
            description="COM_FIELDS_FIELD_REQUIRED_DESC"
        >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
            name="checked_out"
            type="int"
            required="true"
            default="0"
            input="hidden"
            filter="unset"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="checked_out_time"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="hidden"
            filter="unset"
        >
        </field>

        <field
            name="ordering"
            type="int"
            required="true"
            default="0"
            input="text"
            label="JFIELD_ORDERING_LABEL"
            description="JFIELD_ORDERING_DESC"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="params"
            type="json"
            required="true"
        >
        </field>

        <field
            name="fieldparams"
            type="text"
            required="true"
        >
        </field>

        <field
            name="language"
            type="char"
            required="true"
            default=""
            input="contentlanguage"
            label="JFIELD_LANGUAGE_LABEL"
            description="COM_FIELDS_FIELD_LANGUAGE_DESC"
        >
            <option value="*">JALL</option>
        </field>

        <field
            name="created_time"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="text"
            label="JGLOBAL_CREATED_DATE"
            filter="unset"
            readonly="true"
        >
        </field>

        <field
            name="created_user_id"
            type="int"
            required="true"
            default="0"
            input="user"
            label="JGLOBAL_FIELD_CREATED_BY_LABEL"
            description="JGLOBAL_FIELD_CREATED_BY_DESC"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="modified_time"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="text"
            label="JGLOBAL_FIELD_MODIFIED_LABEL"
            filter="unset"
            readonly="true"
        >
        </field>

        <field
            name="modified_by"
            type="int"
            required="true"
            default="0"
            input="user"
            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
            readonly="true"
            filter="unset"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="access"
            type="int"
            required="true"
            default="1"
            input="accesslevel"
            label="JFIELD_ACCESS_LABEL"
            description="JFIELD_ACCESS_DESC"
        >
            <validation rule="integer"/>
        </field>

    </fields>

    <relations>
    </relations>

</entity>
