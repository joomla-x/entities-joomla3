<?xml version="1.0" encoding="utf-8"?>
<entity xmlns="https://joomla.org/joomla-x/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://joomla.org/joomla-x/orm
            https://raw.githubusercontent.com/joomla-x/orm/master/src/Definition/entity.xsd"
        name="Joomla3\Entity\Newsfeed">

    <storage>
        <default table="newsfeeds" primary="id"/>
    </storage>

    <fields>

        <field
            name="catid"
            type="int"
            required="true"
            default="0"
            input="categoryedit"
            label="JCATEGORY"
            description="COM_NEWSFEEDS_FIELD_CATEGORY_DESC"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="id"
            type="int"
            required="true"
            input="number"
            label="JGLOBAL_FIELD_ID_LABEL"
            description="JGLOBAL_FIELD_ID_DESC"
            default="0"
            readonly="true"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="name"
            type="varchar"
            required="true"
            default=""
            input="text"
            label="JGLOBAL_TITLE"
            description="JFIELD_TITLE_DESC"
            size="40"
        >
            <validation rule="maxlen" value="40"/>
        </field>

        <field
            name="alias"
            type="varchar"
            required="true"
            default=""
            input="text"
            label="JFIELD_ALIAS_LABEL"
            description="JFIELD_ALIAS_DESC"
            size="45"
            hint="JFIELD_ALIAS_PLACEHOLDER"
        >
            <validation rule="maxlen" value="45"/>
        </field>

        <field
            name="link"
            type="varchar"
            required="true"
            default=""
            input="url"
            label="COM_NEWSFEEDS_FIELD_LINK_LABEL"
            description="COM_NEWSFEEDS_FIELD_LINK_DESC"
            size="60"
            filter="url"
        >
            <validation rule="maxlen" value="60"/>
        </field>

        <field
            name="published"
            type="boolean"
            required="true"
            default="0"
            input="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field
            name="numarticles"
            type="int"
            required="true"
            default="1"
            input="number"
            label="COM_NEWSFEEDS_FIELD_NUM_ARTICLES_LABEL"
            description="COM_NEWSFEEDS_FIELD_NUM_ARTICLES_DESC"
            size="2"
        >
            <validation rule="integer"/>
            <validation rule="minvalue" value="-99"/>
            <validation rule="maxvalue" value="99"/>
        </field>

        <field
            name="cache_time"
            type="int"
            required="true"
            default="3600"
            input="number"
            label="COM_NEWSFEEDS_FIELD_CACHETIME_LABEL"
            description="JGLOBAL_FIELD_FIELD_CACHETIME_DESC"
            size="4"
        >
            <validation rule="integer"/>
            <validation rule="minvalue" value="-9999"/>
            <validation rule="maxvalue" value="9999"/>
        </field>

        <field
            name="checked_out"
            type="int"
            required="true"
            default="0"
            input="Text"
            label="JGLOBAL_FIELD_CHECKEDOUT_LABEL"
            description="JGLOBAL_FIELD_CHECKEDOUT_DESC"
            size="6"
            readonly="true"
            filter="unset"
        >
            <validation rule="integer"/>
            <validation rule="minvalue" value="-999999"/>
            <validation rule="maxvalue" value="999999"/>
        </field>

        <field
            name="checked_out_time"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="Text"
            label="JGLOBAL_FIELD_CHECKEDOUT_TIME_LABEL"
            description="JGLOBAL_FIELD_CHECKEDOUT_TIME_DESC"
            size="6"
            readonly="true"
            filter="unset"
        >
            <validation rule="maxlen" value="6"/>
        </field>

        <field
            name="ordering"
            type="int"
            required="true"
            default="0"
            input="ordering"
            label="JFIELD_ORDERING_LABEL"
            description="JFIELD_ORDERING_DESC"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="rtl"
            type="tinyint"
            required="true"
            default="0"
            input="list"
            label="COM_NEWSFEEDS_FIELD_RTL_LABEL"
            description="COM_NEWSFEEDS_FIELD_RTL_DESC"
        >
            <option value="0">COM_NEWSFEEDS_FIELD_VALUE_SITE</option>
            <option value="1">COM_NEWSFEEDS_FIELD_VALUE_LTR</option>
            <option value="2">COM_NEWSFEEDS_FIELD_VALUE_RTL</option>
        </field>

        <field
            name="access"
            type="int"
            required="true"
            default="0"
            input="accesslevel"
            label="JFIELD_ACCESS_LABEL"
            description="JFIELD_ACCESS_DESC"
            size="1"
        >
            <validation rule="integer"/>
            <validation rule="minvalue" value="-9"/>
            <validation rule="maxvalue" value="9"/>
        </field>

        <field
            name="language"
            type="char"
            required="true"
            default=""
            input="contentlanguage"
            label="JFIELD_LANGUAGE_LABEL"
            description="COM_NEWSFEEDS_FIELD_LANGUAGE_DESC"
        >
            <option value="*">JALL</option>
        </field>

        <field
            name="params"
            type="json"
            required="true"
        >
        </field>

        <field
            name="created"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="calendar"
            label="JGLOBAL_FIELD_CREATED_LABEL"
            description="JGLOBAL_FIELD_CREATED_DESC"
            size="22"
            filter="user_utc"
        >
            <validation rule="maxlen" value="22"/>
        </field>

        <field
            name="created_by"
            type="int"
            required="true"
            default="0"
            input="user"
            label="JGLOBAL_FIELD_Created_by_Label"
            description="JGLOBAL_FIELD_CREATED_BY_DESC"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="created_by_alias"
            type="varchar"
            required="true"
            default=""
            input="text"
            label="JGLOBAL_FIELD_Created_by_alias_Label"
            description="JGLOBAL_FIELD_CREATED_BY_ALIAS_DESC"
            size="20"
        >
            <validation rule="maxlen" value="20"/>
        </field>

        <field
            name="modified"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="calendar"
            label="JGLOBAL_FIELD_Modified_Label"
            description="COM_NEWSFEEDS_FIELD_MODIFIED_DESC"
            size="22"
            readonly="true"
            filter="user_utc"
        >
            <validation rule="maxlen" value="22"/>
        </field>

        <field
            name="modified_by"
            type="int"
            required="true"
            default="0"
            input="user"
            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
            description="COM_NEWSFEEDS_FIELD_MODIFIED_BY_DESC"
            readonly="true"
            filter="unset"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="metakey"
            type="text"
            required="true"
            input="textarea"
            label="JFIELD_META_KEYWORDS_LABEL"
            description="JFIELD_META_KEYWORDS_DESC"
        >
        </field>

        <field
            name="metadesc"
            type="text"
            required="true"
            input="textarea"
            label="JFIELD_META_DESCRIPTION_LABEL"
            description="JFIELD_META_DESCRIPTION_DESC"
        >
        </field>

        <field
            name="metadata"
            type="json"
            required="true"
        >
        </field>

        <!-- A reference to enable linkages to external data sets. -->
        <field
            name="xreference"
            type="varchar"
            required="true"
            input="text"
            label="JFIELD_XREFERENCE_LABEL"
            description="JFIELD_XREFERENCE_DESC"
            size="20"
        >
            <validation rule="maxlen" value="20"/>
        </field>

        <field
            name="publish_up"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="calendar"
            label="JGLOBAL_FIELD_PUBLISH_UP_LABEL"
            description="JGLOBAL_FIELD_PUBLISH_UP_DESC"
            size="22"
            filter="user_utc"
        >
            <validation rule="maxlen" value="22"/>
        </field>

        <field
            name="publish_down"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="calendar"
            label="JGLOBAL_FIELD_PUBLISH_DOWN_LABEL"
            description="JGLOBAL_FIELD_PUBLISH_DOWN_DESC"
            size="22"
            filter="user_utc"
        >
            <validation rule="maxlen" value="22"/>
        </field>

        <field
            name="description"
            type="text"
            required="true"
            input="editor"
            label="JGLOBAL_DESCRIPTION"
            description="COM_NEWSFEEDS_FIELD_DESCRIPTION_DESC"
            filter="JComponentHelper::filterText"
        >
        </field>

        <field
            name="version"
            type="int"
            required="true"
            default="1"
            input="text"
            label="COM_NEWSFEEDS_FIELD_VERSION_LABEL"
            description="COM_NEWSFEEDS_FIELD_VERSION_DESC"
            size="6"
            readonly="true"
            filter="unset"
        >
            <validation rule="integer"/>
            <validation rule="minvalue" value="-999999"/>
            <validation rule="maxvalue" value="999999"/>
        </field>

        <field
            name="hits"
            type="int"
            required="true"
            default="0"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="images"
            type="json"
            required="true"
        >
        </field>

    </fields>

    <relations>
        <belongsTo
            name="category"
            entity="Joomla3\Entity\Category"
            reference="catid"
        />

        <belongsTo
            name="created_user"
            entity="Joomla3\Entity\User"
            reference="created_by"
        />

        <belongsTo
            name="modified_user"
            entity="Joomla3\Entity\User"
            reference="modified_by"
        />

        <belongsTo
            name="checked_out_user"
            entity="Joomla3\Entity\User"
            reference="checked_out"
        />
    </relations>

</entity>
