<?xml version="1.0" encoding="utf-8"?>
<entity xmlns="https://joomla.org/joomla-x/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://joomla.org/joomla-x/orm
            https://raw.githubusercontent.com/joomla-x/orm/master/src/Definition/entity.xsd"
        name="Joomla3\Entity\FinderFilter">

    <storage>
        <default table="finder_filters" primary="filter_id"/>
    </storage>

    <fields>

        <field
            name="filter_id"
            type="int"
            required="true"
            input="text"
            label="JGLOBAL_FIELD_ID_LABEL"
            description="JGLOBAL_FIELD_ID_DESC"
            size="10"
            default="0"
            readonly="true"
        >
            <validation rule="integer"/>
            <validation rule="minvalue" value="-9999999999"/>
            <validation rule="maxvalue" value="9999999999"/>
        </field>

        <field
            name="title"
            type="varchar"
            required="true"
            input="text"
            label="JGLOBAL_TITLE"
            description="COM_FINDER_FILTER_TITLE_DESCRIPTION"
            size="40"
        >
            <validation rule="maxlen" value="40"/>
        </field>

        <field
            name="alias"
            type="varchar"
            required="true"
            input="text"
            label="JFIELD_ALIAS_LABEL"
            description="JFIELD_ALIAS_DESC"
            hint="JFIELD_ALIAS_PLACEHOLDER"
            size="45"
        >
            <validation rule="maxlen" value="45"/>
        </field>

        <field
            name="state"
            type="boolean"
            required="true"
            default="1"
            input="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
            filter="intval"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>

        <field
            name="created"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="calendar"
            label="JGLOBAL_FIELD_CREATED_LABEL"
            description="JGLOBAL_FIELD_CREATED_DESC"
            size="22"
            filter="user_utc"
        >
            <validation rule="maxlen" value="22"/>
        </field>

        <field
            name="created_by"
            type="int"
            required="true"
            input="user"
            label="COM_FINDER_FIELD_CREATED_BY_LABEL"
            description="COM_FINDER_FIELD_CREATED_BY_DESC"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="created_by_alias"
            type="varchar"
            required="true"
            input="text"
            label="COM_FINDER_FIELD_CREATED_BY_ALIAS_LABEL"
            description="COM_FINDER_FIELD_CREATED_BY_ALIAS_DESC"
            size="20"
        >
            <validation rule="maxlen" value="20"/>
        </field>

        <field
            name="modified"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="calendar"
            label="JGLOBAL_FIELD_MODIFIED_LABEL"
            description="COM_FINDER_FIELD_MODIFIED_DESCRIPTION"
            size="22"
            readonly="true"
            filter="user_utc"
        >
            <validation rule="maxlen" value="22"/>
        </field>

        <field
            name="modified_by"
            type="int"
            required="true"
            default="0"
            input="user"
            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
            readonly="true"
            filter="unset"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="checked_out"
            type="int"
            required="true"
            default="0"
            input="hidden"
            filter="unset"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="checked_out_time"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="hidden"
            filter="unset"
        >
        </field>

        <field
            name="map_count"
            type="int"
            required="true"
            default="0"
            input="text"
            label="COM_FINDER_FILTER_MAP_COUNT"
            description="COM_FINDER_FILTER_MAP_COUNT_DESCRIPTION"
            size="10"
            readonly="true"
        >
            <validation rule="integer"/>
            <validation rule="minvalue" value="-9999999999"/>
            <validation rule="maxvalue" value="9999999999"/>
        </field>

        <field
            name="data"
            type="text"
            required="true"
        >
        </field>

        <field
            name="params"
            type="json"
        >
        </field>

    </fields>

    <relations>
        <belongsTo
            name="filter"
            entity="Joomla3\Entity\Filter"
            reference="filter_id"
        />
    </relations>

</entity>
