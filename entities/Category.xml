<?xml version="1.0" encoding="utf-8"?>
<entity xmlns="https://joomla.org/joomla-x/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://joomla.org/joomla-x/orm
            https://raw.githubusercontent.com/joomla-x/orm/master/src/Definition/entity.xsd"
        name="Joomla3\Entity\Category">

    <storage>
        <default table="categories"/>
    </storage>

    <fields>

        <field
            name="id"
            type="int"
            required="true"
            input="number"
            label="JGLOBAL_FIELD_ID_LABEL"
            description="JGLOBAL_FIELD_ID_DESC"
            default="0"
            readonly="true"
        >
            <validation rule="integer"/>
        </field>

        <!-- FK to the #__assets table. -->
        <field
            name="asset_id"
            type="int"
            required="true"
            default="0"
            input="hidden"
            filter="unset"
            label="JFIELD_ASSET_ID_LABEL"
            description="JFIELD_ASSET_ID_DESC"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="parent_id"
            type="int"
            required="true"
            default="0"
            input="categoryedit"
            label="COM_CATEGORIES_FIELD_PARENT_LABEL"
            description="COM_CATEGORIES_FIELD_PARENT_DESC"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="lft"
            type="int"
            required="true"
            default="0"
            input="hidden"
            filter="unset"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="rgt"
            type="int"
            required="true"
            default="0"
            input="hidden"
            filter="unset"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="level"
            type="int"
            required="true"
            default="0"
            input="hidden"
            filter="unset"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="path"
            type="varchar"
            required="true"
            default=""
            input="text"
            label="COM_CATEGORIES_PATH_LABEL"
            description="COM_CATEGORIES_PATH_DESC"
            size="40"
            readonly="true"
        >
            <validation rule="maxlen" value="40"/>
        </field>

        <field
            name="extension"
            type="varchar"
            required="true"
            default=""
            input="hidden"
        >
        </field>

        <field
            name="title"
            type="varchar"
            required="true"
            default=""
            input="text"
            label="JGLOBAL_TITLE"
            description="JFIELD_TITLE_DESC"
            size="40"
        >
            <validation rule="maxlen" value="40"/>
        </field>

        <field
            name="alias"
            type="varchar"
            required="true"
            default=""
            input="text"
            label="JFIELD_ALIAS_LABEL"
            description="JFIELD_ALIAS_DESC"
            size="45"
            hint="JFIELD_ALIAS_PLACEHOLDER"
        >
            <validation rule="maxlen" value="45"/>
        </field>

        <field
            name="note"
            type="varchar"
            required="true"
            default=""
            input="text"
            label="COM_CATEGORIES_FIELD_NOTE_LABEL"
            description="COM_CATEGORIES_FIELD_NOTE_DESC"
            size="40"
        >
            <validation rule="maxlen" value="40"/>
        </field>

        <field
            name="description"
            type="mediumtext"
            required="true"
            default=""
            input="editor"
            label="JGLOBAL_DESCRIPTION"
            description="COM_CATEGORIES_DESCRIPTION_DESC"
            filter="JComponentHelper::filterText"
        >
        </field>

        <field
            name="published"
            type="boolean"
            required="true"
            default="0"
            input="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field
            name="checked_out"
            type="int"
            required="true"
            default="0"
            input="hidden"
            filter="unset"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="checked_out_time"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="hidden"
            filter="unset"
        >
        </field>

        <field
            name="access"
            type="int"
            required="true"
            default="0"
            input="accesslevel"
            label="JFIELD_ACCESS_LABEL"
            description="JFIELD_ACCESS_DESC"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="params"
            type="json"
            required="true"
            default=""
        >
        </field>

        <!-- The meta description for the page. -->
        <field
            name="metadesc"
            type="varchar"
            required="true"
            default=""
            input="textarea"
            label="JFIELD_META_DESCRIPTION_LABEL"
            description="JFIELD_META_DESCRIPTION_DESC"
        >
        </field>

        <!-- The meta keywords for the page. -->
        <field
            name="metakey"
            type="varchar"
            required="true"
            default=""
            input="textarea"
            label="JFIELD_META_KEYWORDS_LABEL"
            description="JFIELD_META_KEYWORDS_DESC"
        >
        </field>

        <!-- JSON encoded metadata properties. -->
        <field
            name="metadata"
            type="json"
            required="true"
            default=""
        >
        </field>

        <field
            name="created_user_id"
            type="int"
            required="true"
            default="0"
            input="user"
            label="JGLOBAL_FIELD_CREATED_BY_LABEL"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="created_time"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="text"
            label="JGLOBAL_CREATED_DATE"
            filter="unset"
            readonly="true"
        >
        </field>

        <field
            name="modified_user_id"
            type="int"
            required="true"
            default="0"
            input="user"
            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
            readonly="true"
            filter="unset"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="modified_time"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="text"
            label="JGLOBAL_FIELD_MODIFIED_LABEL"
            filter="unset"
            readonly="true"
        >
        </field>

        <field
            name="hits"
            type="int"
            required="true"
            default="0"
            input="number"
            label="JGLOBAL_HITS"
            description="COM_CATEGORIES_FIELD_HITS_DESC"
            readonly="true"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="language"
            type="char"
            required="true"
            default=""
            input="contentlanguage"
            label="JFIELD_LANGUAGE_LABEL"
            description="COM_CATEGORIES_FIELD_LANGUAGE_DESC"
        >
            <option value="*">JALL</option>
        </field>

        <field
            name="version"
            type="int"
            required="true"
            default="1"
        >
            <validation rule="integer"/>
        </field>

    </fields>

    <relations>
    </relations>

</entity>
