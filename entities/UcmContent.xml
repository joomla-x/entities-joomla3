<?xml version="1.0" encoding="utf-8"?>
<entity xmlns="https://joomla.org/joomla-x/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://joomla.org/joomla-x/orm
            https://raw.githubusercontent.com/joomla-x/orm/master/src/Definition/entity.xsd"
        name="Joomla3\Entity\UcmContent">

    <storage>
        <default table="ucm_content" primary="core_content_id"/>
    </storage>

    <fields>

        <field
            name="core_content_id"
            type="int"
            required="true"
        >
            <validation rule="integer"/>
        </field>

        <!-- FK to the content types table -->
        <field
            name="core_type_alias"
            type="varchar"
            required="true"
            default=""
        >
        </field>

        <field
            name="core_title"
            type="varchar"
            required="true"
            default=""
        >
        </field>

        <field
            name="core_alias"
            type="varchar"
            required="true"
            default=""
        >
        </field>

        <field
            name="core_body"
            type="mediumtext"
            required="true"
            default=""
        >
        </field>

        <field
            name="core_state"
            type="boolean"
            required="true"
            default="0"
        >
        </field>

        <field
            name="core_checked_out_time"
            type="varchar"
            required="true"
            default="0000-00-00 00:00:00"
        >
        </field>

        <field
            name="core_checked_out_user_id"
            type="int"
            required="true"
            default="0"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="core_access"
            type="int"
            required="true"
            default="0"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="core_params"
            type="text"
            required="true"
            default=""
        >
        </field>

        <field
            name="core_featured"
            type="tinyint"
            required="true"
            default="0"
        >
        </field>

        <!-- JSON encoded metadata properties. -->
        <field
            name="core_metadata"
            type="varchar"
            required="true"
            default=""
        >
        </field>

        <field
            name="core_created_user_id"
            type="int"
            required="true"
            default="0"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="core_created_by_alias"
            type="varchar"
            required="true"
            default=""
        >
        </field>

        <field
            name="core_created_time"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
        >
        </field>

        <!-- Most recent user that modified -->
        <field
            name="core_modified_user_id"
            type="int"
            required="true"
            default="0"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="core_modified_time"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
        >
        </field>

        <field
            name="core_language"
            type="char"
            required="true"
            default=""
        >
        </field>

        <field
            name="core_publish_up"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
        >
        </field>

        <field
            name="core_publish_down"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
        >
        </field>

        <!-- ID from the individual type table -->
        <field
            name="core_content_item_id"
            type="int"
            required="true"
            default="0"
        >
            <validation rule="integer"/>
        </field>

        <!-- FK to the #__assets table. -->
        <field
            name="asset_id"
            type="int"
            required="true"
            default="0"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="core_images"
            type="text"
            required="true"
            default=""
        >
        </field>

        <field
            name="core_urls"
            type="text"
            required="true"
            default=""
        >
        </field>

        <field
            name="core_hits"
            type="int"
            required="true"
            default="0"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="core_version"
            type="int"
            required="true"
            default="1"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="core_ordering"
            type="int"
            required="true"
            default="0"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="core_metakey"
            type="text"
            required="true"
            default=""
        >
        </field>

        <field
            name="core_metadesc"
            type="text"
            required="true"
            default=""
        >
        </field>

        <field
            name="core_catid"
            type="int"
            required="true"
            default="0"
        >
            <validation rule="integer"/>
        </field>

        <!-- A reference to enable linkages to external data sets. -->
        <field
            name="core_xreference"
            type="varchar"
            required="true"
            default=""
        >
        </field>

        <field
            name="core_type_id"
            type="int"
            required="true"
            default="0"
        >
            <validation rule="integer"/>
        </field>

    </fields>

    <relations>
        <belongsTo
            name="core_checked_out_user"
            entity="Joomla3\Entity\User"
            reference="core_checked_out_user_id"
        />

        <belongsTo
            name="core_created_user"
            entity="Joomla3\Entity\User"
            reference="core_created_user_id"
        />

        <belongsTo
            name="core_modified_user"
            entity="Joomla3\Entity\User"
            reference="core_modified_user_id"
        />

        <belongsTo
            name="core_content_item"
            entity="@core_type_alias"
            reference="core_content_item_id"
        />

        <belongsTo
            name="asset"
            entity="Joomla3\Entity\Asset"
            reference="asset_id"
        />

        <belongsTo
            name="core_category"
            entity="Joomla3\Entity\Category"
            reference="core_catid"
        />

        <belongsTo
            name="core_type"
            entity="Joomla3\Entity\ContentType"
            reference="core_type_id"
        />
    </relations>

</entity>
