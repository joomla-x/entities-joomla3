<?xml version="1.0" encoding="utf-8"?>
<entity xmlns="https://joomla.org/joomla-x/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://joomla.org/joomla-x/orm
            https://raw.githubusercontent.com/joomla-x/orm/master/src/Definition/entity.xsd"
        name="Joomla3\Entity\Content">

    <storage>
        <default table="content"/>
    </storage>

    <fields>

        <field
            name="id"
            type="int"
            required="true"
            input="number"
            label="JGLOBAL_FIELD_ID_LABEL"
            description="JGLOBAL_FIELD_ID_DESC"
            size="10"
            default="0"
            readonly="true"
        >
            <validation rule="integer"/>
            <validation rule="minvalue" value="-9999999999"/>
            <validation rule="maxvalue" value="9999999999"/>
        </field>

        <!-- FK to the #__assets table. -->
        <field
            name="asset_id"
            type="int"
            required="true"
            default="0"
            input="hidden"
            filter="unset"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="title"
            type="varchar"
            required="true"
            default=""
            input="text"
            label="JGLOBAL_TITLE"
            description="JFIELD_TITLE_DESC"
            size="40"
        >
            <validation rule="maxlen" value="40"/>
        </field>

        <field
            name="alias"
            type="varchar"
            required="true"
            default=""
            input="text"
            label="JFIELD_ALIAS_LABEL"
            description="JFIELD_ALIAS_DESC"
            hint="JFIELD_ALIAS_PLACEHOLDER"
            size="40"
        >
            <validation rule="maxlen" value="40"/>
        </field>

        <field
            name="introtext"
            type="mediumtext"
            required="true"
        >
        </field>

        <field
            name="fulltext"
            type="mediumtext"
            required="true"
        >
        </field>

        <field
            name="state"
            type="boolean"
            required="true"
            default="1"
            input="list"
            label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC"
            filter="intval"
        >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
            <option value="2">JARCHIVED</option>
            <option value="-2">JTRASHED</option>
        </field>

        <field
            name="catid"
            type="int"
            required="true"
            default=""
            input="categoryedit"
            label="JCATEGORY"
            description="JFIELD_CATEGORY_DESC"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="created"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="calendar"
            label="COM_CONTENT_FIELD_CREATED_LABEL"
            description="COM_CONTENT_FIELD_CREATED_DESC"
            size="22"
            filter="user_utc"
        >
            <validation rule="maxlen" value="22"/>
        </field>

        <field
            name="created_by"
            type="int"
            required="true"
            default="0"
            input="user"
            label="COM_CONTENT_FIELD_CREATED_BY_LABEL"
            description="COM_CONTENT_FIELD_CREATED_BY_DESC"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="created_by_alias"
            type="varchar"
            required="true"
            default=""
            input="text"
            label="COM_CONTENT_FIELD_CREATED_BY_ALIAS_LABEL"
            description="COM_CONTENT_FIELD_CREATED_BY_ALIAS_DESC"
            size="20"
        >
            <validation rule="maxlen" value="20"/>
        </field>

        <field
            name="modified"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="calendar"
            label="JGLOBAL_FIELD_MODIFIED_LABEL"
            description="COM_CONTENT_FIELD_MODIFIED_DESC"
            size="22"
            readonly="true"
            filter="user_utc"
        >
            <validation rule="maxlen" value="22"/>
        </field>

        <field
            name="modified_by"
            type="int"
            required="true"
            default="0"
            input="user"
            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
            readonly="true"
            filter="unset"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="checked_out"
            type="int"
            required="true"
            default="0"
            input="hidden"
            filter="unset"
        >
            <validation rule="integer"/>
        </field>

        <field
            name="checked_out_time"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="hidden"
            filter="unset"
        >
        </field>

        <field
            name="publish_up"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="calendar"
            label="COM_CONTENT_FIELD_PUBLISH_UP_LABEL"
            description="COM_CONTENT_FIELD_PUBLISH_UP_DESC"
            size="22"
            filter="user_utc"
        >
            <validation rule="maxlen" value="22"/>
        </field>

        <field
            name="publish_down"
            type="datetime"
            required="true"
            default="0000-00-00 00:00:00"
            input="calendar"
            label="COM_CONTENT_FIELD_PUBLISH_DOWN_LABEL"
            description="COM_CONTENT_FIELD_PUBLISH_DOWN_DESC"
            size="22"
            filter="user_utc"
        >
            <validation rule="maxlen" value="22"/>
        </field>

        <field
            name="images"
            type="json"
            required="true"
        >
        </field>

        <field
            name="urls"
            type="json"
            required="true"
        >
        </field>

        <field
            name="attribs"
            type="json"
            required="true"
        >
        </field>

        <field
            name="version"
            type="int"
            required="true"
            default="1"
            input="text"
            label="COM_CONTENT_FIELD_VERSION_LABEL"
            description="COM_CONTENT_FIELD_VERSION_DESC"
            size="6"
            readonly="true"
            filter="unset"
        >
            <validation rule="integer"/>
            <validation rule="minvalue" value="-999999"/>
            <validation rule="maxvalue" value="999999"/>
        </field>

        <field
            name="ordering"
            type="int"
            required="true"
            default="0"
            input="text"
            label="JFIELD_ORDERING_LABEL"
            description="JFIELD_ORDERING_DESC"
            size="6"
        >
            <validation rule="integer"/>
            <validation rule="minvalue" value="-999999"/>
            <validation rule="maxvalue" value="999999"/>
        </field>

        <field
            name="metakey"
            type="text"
            required="true"
            input="textarea"
            label="JFIELD_META_KEYWORDS_LABEL"
            description="JFIELD_META_KEYWORDS_DESC"
        >
        </field>

        <field
            name="metadesc"
            type="text"
            required="true"
            input="textarea"
            label="JFIELD_META_DESCRIPTION_LABEL"
            description="JFIELD_META_DESCRIPTION_DESC"
        >
        </field>

        <field
            name="access"
            type="int"
            required="true"
            default="0"
            input="accesslevel"
            label="JFIELD_ACCESS_LABEL"
            description="JFIELD_ACCESS_DESC"
            size="1"
        >
            <validation rule="integer"/>
            <validation rule="minvalue" value="-9"/>
            <validation rule="maxvalue" value="9"/>
        </field>

        <field
            name="hits"
            type="int"
            required="true"
            default="0"
            input="number"
            label="JGLOBAL_HITS"
            description="COM_CONTENT_FIELD_HITS_DESC"
            size="6"
            readonly="true"
            filter="unset"
        >
            <validation rule="integer"/>
            <validation rule="minvalue" value="-999999"/>
            <validation rule="maxvalue" value="999999"/>
        </field>

        <field
            name="metadata"
            type="json"
            required="true"
        >
        </field>

        <!-- Set if article is featured. -->
        <field
            name="featured"
            type="tinyint"
            required="true"
            default="0"
            input="radio"
            label="JFEATURED"
            description="COM_CONTENT_FIELD_FEATURED_DESC"
        >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <!-- The language code for the article. -->
        <field
            name="language"
            type="char"
            required="true"
            input="contentlanguage"
            label="JFIELD_LANGUAGE_LABEL"
            description="COM_CONTENT_FIELD_LANGUAGE_DESC"
        >
            <option value="*">JALL</option>
        </field>

        <!-- A reference to enable linkages to external data sets. -->
        <field
            name="xreference"
            type="varchar"
            required="true"
            default=""
            input="text"
            label="JFIELD_KEY_REFERENCE_LABEL"
            description="JFIELD_KEY_REFERENCE_DESC"
            size="20"
        >
            <validation rule="maxlen" value="20"/>
        </field>

    </fields>

    <relations>
    </relations>

</entity>
